<resources>

  <!-- List of activity names for the navigation drawer. -->
  <string-array name="drawer_array">
    <item>@string/action_settings</item>
    <item>@string/action_about</item>
    <item>@string/action_quit</item>
  </string-array>

  <!-- Used to decide how to handle SEARCH actions. -->
  <string-array name="pref_searchMode_array">
    <item>@string/pref_searchMode_mode_goToSite</item>
    <item>@string/pref_searchMode_mode_goToActivity</item>
  </string-array>

  <!-- Used to determine user agent emulation mode. -->
  <string-array name="pref_userAgentMode_array">
    <item>@string/pref_userAgentMode_default</item>
    <item>Phone</item>
    <item>Tablet</item>
    <item>Desktop</item>
  </string-array>

  <!-- Used to stop page load on a timeout. -->
  <string-array name="pref_pageTimeout_array">
    <item>@string/pref_pageTimeout_default</item>
    <item>5 Seconds</item>
    <item>15 Seconds</item>
    <item>45 Seconds</item>
  </string-array>

</resources>
